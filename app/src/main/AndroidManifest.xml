<?xml version="1.0" encoding="utf-8"?>
<manifest

    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.qiyutech.tbk">


    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name="com.qiyutech.tbk.MyApplication"
        android:allowBackup="false"
        android:fullBackupContent="false"
        android:hardwareAccelerated="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <meta-data
            android:name="android.webkit.WebView.EnableSafeBrowsing"
            android:value="false" />
        <!--
        opt out google data collect
        https://developer.android.com/guide/webapps/managing-webview#metrics
        -->
        <meta-data
            android:name="android.webkit.WebView.MetricsOptOut"
            android:value="true" /> <!-- useless -->
        <activity
            android:name="com.qiyutech.tbk.SafeImgActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.MyWhite" />
        <activity
            android:name="com.qiyutech.tbk.TaoBaoActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.MyWhite" />
        <activity
            android:name="com.qiyutech.tbk.GroupActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.MyWhite"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.qiyutech.tbk.MeActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.MyWhite" />
        <activity
            android:name="com.qiyutech.tbk.CouponActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.MyWhite" />
        <activity
            android:name="com.qiyutech.tbk.SearchActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.MyWhite" />
        <activity
            android:name="com.qiyutech.tbk.PrivacyActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.MyWhite" />
        <activity
            android:name="com.qiyutech.tbk.HomeActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.MyWhite">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.qiyutech.tbk.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.MyWhite" />
        <activity
            android:name="com.qiyutech.tbk.UserPasswordActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.MyWhite" />
        <activity
            android:name="com.qiyutech.tbk.ItemDetailV2Activity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.MyWhite" />
        <activity
            android:name="com.qiyutech.tbk.SearchDetailNativeActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.MyWhite" />
        <activity
            android:name="com.qiyutech.tbk.UserInfoActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.MyWhite"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.qiyutech.tbk.DevInfoActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.MyWhite" />
    </application>

</manifest>
